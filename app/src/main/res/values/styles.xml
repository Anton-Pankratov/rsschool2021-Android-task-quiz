<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GuidelineStyle">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/zero_size</item>
    </style>

    <style name="VerticalGuideline" parent="GuidelineStyle">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalGuideline">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="QuestionIterateButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_padding_size</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>